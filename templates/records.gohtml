{{ define "head" }}<title>Table</title>{{ end }}
{{ define "body" }}<p style="text-align: center;">
    <a href="?from=0">All</a>,
    <a href="?from={{ .OneWeekAgo }}">1w</a>,
    <a href="?">1d</a>
</p><table>
    <thead>
        <tr>
            <th>Time</th>
            <th>Visibility</th>
            <th>Sunrise</th>
            <th>Sunset</th>
            <th>Temp</th>
            <th>Temp Min</th>
            <th>Temp Max</th>
            <th>Feels Like</th>
            <th>Pressure</th>
            <th>Sea Level</th>
            <th>Ground Level</th>
            <th>Humidity</th>
            <th>Wind Speed</th>
            <th>Wind Degrees</th>
            <th>Clouds</th>
            <th>Rain</th>
            <th>Snow</th>
            <th>Weather</th>
        </tr>
    </thead>
    <tbody>
        {{ range .Records }}<tr>
            <td>{{ .Dt }}</td>
            <td>{{ .Visibility }}</td>
            <td>{{ .Sunrise }}</td>
            <td>{{ .Sunset }}</td>
            <td>{{ .Temp }}</td>
            <td>{{ .TempMin }}</td>
            <td>{{ .TempMax }}</td>
            <td>{{ .FeelsLike }}</td>
            <td>{{ .Pressure }}</td>
            <td>{{ .SeaLevel }}</td>
            <td>{{ .GrndLevel }}</td>
            <td>{{ .Humidity }}</td>
            <td>{{ .WindSpeed }}</td>
            <td>{{ .WindDeg }}</td>
            <td>{{ .Clouds }}</td>
            <td>{{ .Rain1H }}</td>
            <td>{{ .Snow1H }}</td>
            <td>{{ .Weather }}</td>
        </tr>
        {{ end }}</tbody>
</table>{{ end }}
